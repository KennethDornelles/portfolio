# DATABASE
# Prisma connection URL
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# AUTHENTICATION
# Secrets for signing tokens (Use strong random strings in production)
JWT_SECRET="your_jwt_secret_here"
JWT_REFRESH_SECRET="your_refresh_secret_here"
JWT_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# SERVER
PORT=3000
NODE_ENV="development" # development | production

# FRONTEND
FRONTEND_URL="http://localhost:4200"

# REDIS (Caching)
REDIS_HOST="localhost"
REDIS_PORT=6379

# EMAIL (Optional - SendGrid/Resend)
# MAIL_PROVIDER=console # console | resend
# RESEND_API_KEY=re_123456789
# RESEND_FROM=noreply@barberboss.com

# ADMIN USER (for seed script)
ADMIN_EMAIL="your-admin-email@example.com"
ADMIN_PASSWORD="your-secure-password"
ADMIN_NAME="Admin Name"