# Database PostgreSQL
POSTGRES_USER=portfolio
POSTGRES_PASSWORD=portfolio123
POSTGRES_DB=portfolio_db

# Database URL para Prisma
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://portfolio:portfolio123@localhost:5432/portfolio_db?schema=public"

# API Key (mínimo 32 caracteres)
# Gerar com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY=your-super-secret-api-key-with-at-least-32-characters-change-this

# Application
PORT=3000
NODE_ENV=development

# Frontend URL (para configuração do CORS)
FRONTEND_URL=http://localhost:4200

# Rate Limiting
# THROTTLE_TTL: Tempo em milissegundos para resetar o contador (padrão: 60000 = 1 minuto)
# THROTTLE_LIMIT: Número máximo de requisições permitidas no período TTL (padrão: 10)
THROTTLE_TTL=60000
THROTTLE_LIMIT=10
